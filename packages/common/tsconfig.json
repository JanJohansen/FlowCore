{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "bundler",
		"paths": {
			"@webapp/backend": ["../backend/dist/index.d.ts"],
			"@webapp/backend/*": ["../backend/dist/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
